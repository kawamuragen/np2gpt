{
    "manifest_version": 3,
    "name": "np2gpt",
    "description": "Create a sentence to summarize a NewsPicks article to ChatGPT",
    "version": "1.0",
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://newspicks.com/news/*/body/*"
            ],
            "run_at": "document_idle"
        }
    ]
}